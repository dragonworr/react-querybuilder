{
  "name": "react-querybuilder",
  "version": "4.0.0-beta.5",
  "description": "The React <QueryBuilder /> component for constructing queries",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "formatQuery": "dist/formatQuery.js",
  "parseSQL": "dist/parseSQL.js",
  "targets": {
    "types": false,
    "formatQuery": {
      "source": "src/utils/formatQuery.ts",
      "outputFormat": "esmodule",
      "isLibrary": true
    },
    "parseSQL": {
      "source": "src/utils/parseSQL/index.ts",
      "outputFormat": "esmodule",
      "isLibrary": true
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/react-querybuilder/react-querybuilder"
  },
  "keywords": [
    "react",
    "query",
    "builder",
    "operators",
    "ui",
    "component",
    "clause",
    "expression",
    "sql"
  ],
  "contributors": [
    "Pavan Podila <pavan@pixelingene.com> (http://blog.pixelingene.com)",
    "Jake Boone"
  ],
  "license": "MIT",
  "homepage": "https://github.com/react-querybuilder/react-querybuilder",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@parcel/packager-ts": "^2.0.1",
    "@parcel/transformer-typescript-types": "^2.0.1",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/enzyme": "^3.10.8",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "babel-plugin-istanbul": "^6.0.0",
    "enzyme": "^3.11.0",
    "jest": "^27.0.6",
    "parcel": "^2.0.1",
    "react": "^17.0.1",
    "react-dnd-test-backend": "^14.0.1",
    "react-dnd-test-utils": "^14.0.2",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.40.0",
    "typescript": "^4.5.0"
  },
  "dependencies": {
    "@swc/helpers": "^0.2.14",
    "immer": "^9.0.6",
    "react-dnd": "^14.0.4",
    "react-dnd-html5-backend": "^14.0.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "browserslist": "> 0.25%, not dead",
  "jest": {
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": [
      "<rootDir>src/setupTests.ts"
    ],
    "moduleNameMapper": {
      "\\.(c|sa|sc)ss$": "<rootDir>src/__mocks__/styleMock.ts"
    },
    "coveragePathIgnorePatterns": [
      "sqlParser.js"
    ],
    "testEnvironment": "jsdom"
  },
  "scripts": {
    "build": "rimraf dist && npm run build:css && npm run build:types && npm run build:main",
    "build:css": "sass src/query-builder.scss dist/query-builder.css",
    "build:main": "parcel build",
    "build:types": "tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "publish:demo": "npm run build && node gh-pages.publish.js",
    "publish:npm": "np",
    "lint": "eslint src/",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "generate-sqlparser": "npx jison src/utils/parseSQL/sql.jison --outfile src/utils/parseSQL/sqlParser.js --module-type commonjs && npx jscodeshift -t src/utils/parseSQL/sqlParser.codemod.js src/utils/parseSQL/sqlParser.js",
    "generate-changelog": "node node_modules/github-changes -o react-querybuilder -r react-querybuilder -a --use-commit-body --only-pulls --date-format=\"(YYYY-MM-DD)\""
  }
}
