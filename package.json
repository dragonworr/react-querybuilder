{
  "name": "react-querybuilder-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "start": "cd packages/react-querybuilder && bun run start",
    "start:antd": "cd packages/antd && bun run start",
    "start:bootstrap": "cd packages/bootstrap && bun run start",
    "start:bulma": "cd packages/bulma && bun run start",
    "start:chakra": "cd packages/chakra && bun run start",
    "start:dnd": "cd packages/dnd && bun run start",
    "start:fluent": "cd packages/fluent && bun run start",
    "start:mantine": "cd packages/mantine && bun run start",
    "start:material": "cd packages/material && bun run start",
    "start:native": "cd packages/native && bun run start",
    "demo": "bun run website:start",
    "build": "bun run build:base && concurrently --timings --max-processes 10 --names antd,bootstrap,bulma,chakra,dnd,fluent,mantine,material,native bun:build:antd bun:build:bootstrap bun:build:bulma bun:build:chakra bun:build:dnd bun:build:fluent bun:build:mantine bun:build:material bun:build:native",
    "build:base": "concurrently --timings --names ts bun:build:ts && concurrently --timings --names ctx bun:build:ctx && concurrently --timings --names rqb bun:build:rqb",
    "build:antd": "cd packages/antd && bun run build",
    "build:bootstrap": "cd packages/bootstrap && bun run build",
    "build:bulma": "cd packages/bulma && bun run build",
    "build:chakra": "cd packages/chakra && bun run build",
    "build:ctx": "cd packages/ctx && bun run build",
    "build:dnd": "cd packages/dnd && bun run build",
    "build:fluent": "cd packages/fluent && bun run build",
    "build:mantine": "cd packages/mantine && bun run build",
    "build:material": "cd packages/material && bun run build",
    "build:native": "cd packages/native && bun run build",
    "build:rqb": "cd packages/react-querybuilder && bun run build",
    "build:ts": "cd packages/ts && bun run build",
    "codesandbox-ci": "bash .codesandbox/ci.sh",
    "lint": "eslint 'packages/*/src/**/*.{ts,tsx}' 'examples/**/*.{js,ts,tsx}' 'website/{docs,src,static}/**/*.{js,ts,tsx}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "concurrently --timings --max-processes 14 --names antd,bootstrap,bulma,chakra,ctx,dnd,fluent,mantine,material,native,rqb,ts,examples bun:typecheck:antd bun:typecheck:bootstrap bun:typecheck:bulma bun:typecheck:chakra bun:typecheck:ctx bun:typecheck:dnd bun:typecheck:fluent bun:typecheck:mantine bun:typecheck:material bun:typecheck:native bun:typecheck:rqb bun:typecheck:ts bun:typecheck:examples",
    "typecheck:antd": "tsc -p packages/antd --noEmit",
    "typecheck:bootstrap": "tsc -p packages/bootstrap --noEmit",
    "typecheck:bulma": "tsc -p packages/bulma --noEmit",
    "typecheck:chakra": "tsc -p packages/chakra --noEmit",
    "typecheck:ctx": "tsc -p packages/ctx --noEmit",
    "typecheck:dnd": "tsc -p packages/dnd --noEmit",
    "typecheck:fluent": "tsc -p packages/fluent --noEmit",
    "typecheck:mantine": "tsc -p packages/mantine --noEmit",
    "typecheck:material": "tsc -p packages/material --noEmit",
    "typecheck:native": "tsc -p packages/native --noEmit",
    "typecheck:rqb": "tsc -p packages/react-querybuilder --noEmit",
    "typecheck:ts": "tsc -p packages/ts --noEmit",
    "typecheck:examples": "tsc -p examples",
    "pretty-print": "bun --bun x prettier --config .prettierrc.json --write *.{mj,t}s examples/**/* packages/*/{src,dev,genericTests}/** website/*.js website/{docs,src,versioned_docs,versioned_sidebars}/**",
    "pretty-check": "bun --bun x prettier --config .prettierrc.json --check *.{mj,t}s examples/**/* packages/*/{src,dev,genericTests}/** website/*.js website/{docs,src,versioned_docs,versioned_sidebars}/**",
    "generate-examples": "bun ./examples/generateExamples.ts && bun --bun x prettier --write examples/** --loglevel=silent",
    "generate-parsers": "cd packages/react-querybuilder && bun run generate:parsers",
    "outdated": "yarn upgrade-interactive",
    "version": "yarn && concurrently --timings --names examples,packages bun:generate-examples bun:build && concurrently \"git add examples yarn.lock\"",
    "website:start": "cd website && bun run start",
    "website:build": "cd website && bun run build",
    "website:serve": "cd website && bun run serve",
    "website:deploy": "cd website && bun run deploy",
    "website:typecheck": "tsc -p website"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.4",
    "@react-native-picker/picker": "^2.4.9",
    "@testing-library/dom": "^9.2.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.31",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "all-contributors-cli": "^6.24.0",
    "bun-types": "^0.5.8",
    "concurrently": "^8.0.1",
    "eslint": "^8.37.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-json-stable-stringify": "^2.1.0",
    "glob": "^9.3.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "lerna": "^6.6.1",
    "native-base": "^3.4.28",
    "prettier": "2.8.7",
    "prettier-plugin-organize-imports": "^3.2.2",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-test-backend": "^16.0.1",
    "react-dnd-test-utils": "^16.0.1",
    "react-dom": "^18.2.0",
    "regenerator-runtime": "^0.13.11",
    "typescript": "^4.9.5",
    "vite": "^4.2.1"
  },
  "packageManager": "yarn@3.2.2"
}
